{
    "annotations": {
        "list": []
    },
    "editable": true,
    "gnetId": null,
    "graphTooltip": 1,
    "schemaVersion": 39,
    "tags": [
        "sentinelforge",
        "security"
    ],
    "title": "SentinelForge â€” Security Posture",
    "uid": "sf-security",
    "version": 1,
    "time": {
        "from": "now-24h",
        "to": "now"
    },
    "timezone": "browser",
    "panels": [
        {
            "id": 1,
            "title": "Total Findings (24h)",
            "type": "stat",
            "gridPos": {
                "h": 4,
                "w": 6,
                "x": 0,
                "y": 0
            },
            "targets": [
                {
                    "expr": "sum(increase(sentinelforge_findings_total[24h]))",
                    "legendFormat": "Findings"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "short",
                    "color": {
                        "mode": "thresholds"
                    },
                    "thresholds": {
                        "steps": [
                            {
                                "value": 0,
                                "color": "green"
                            },
                            {
                                "value": 10,
                                "color": "yellow"
                            },
                            {
                                "value": 50,
                                "color": "red"
                            }
                        ]
                    }
                }
            }
        },
        {
            "id": 2,
            "title": "Critical Findings",
            "type": "stat",
            "gridPos": {
                "h": 4,
                "w": 6,
                "x": 6,
                "y": 0
            },
            "targets": [
                {
                    "expr": "sum(increase(sentinelforge_findings_total{severity=\"critical\"}[24h]))",
                    "legendFormat": "Critical"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "short",
                    "color": {
                        "fixedColor": "red",
                        "mode": "fixed"
                    }
                }
            }
        },
        {
            "id": 3,
            "title": "Active Scans",
            "type": "stat",
            "gridPos": {
                "h": 4,
                "w": 6,
                "x": 12,
                "y": 0
            },
            "targets": [
                {
                    "expr": "sentinelforge_attack_runs_active",
                    "legendFormat": "Active"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "short",
                    "color": {
                        "fixedColor": "blue",
                        "mode": "fixed"
                    }
                }
            }
        },
        {
            "id": 4,
            "title": "Scan Pass Rate (%)",
            "type": "gauge",
            "gridPos": {
                "h": 4,
                "w": 6,
                "x": 18,
                "y": 0
            },
            "targets": [
                {
                    "expr": "sentinelforge_scan_pass_rate * 100",
                    "legendFormat": "Pass %"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "percent",
                    "max": 100,
                    "thresholds": {
                        "steps": [
                            {
                                "value": 0,
                                "color": "red"
                            },
                            {
                                "value": 70,
                                "color": "yellow"
                            },
                            {
                                "value": 90,
                                "color": "green"
                            }
                        ]
                    }
                }
            }
        },
        {
            "id": 5,
            "title": "Findings by Severity (24h)",
            "type": "piechart",
            "gridPos": {
                "h": 8,
                "w": 8,
                "x": 0,
                "y": 4
            },
            "targets": [
                {
                    "expr": "sum by (severity) (increase(sentinelforge_findings_total[24h]))",
                    "legendFormat": "{{severity}}"
                }
            ],
            "options": {
                "pieType": "donut",
                "reduceOptions": {
                    "calcs": [
                        "lastNotNull"
                    ]
                }
            }
        },
        {
            "id": 6,
            "title": "Scan Completions Over Time",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 16,
                "x": 8,
                "y": 4
            },
            "targets": [
                {
                    "expr": "sum(rate(sentinelforge_attack_runs_completed_total[5m])) by (status)",
                    "legendFormat": "{{status}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "custom": {
                        "drawStyle": "bars",
                        "stacking": {
                            "mode": "normal"
                        }
                    }
                }
            }
        },
        {
            "id": 7,
            "title": "Worker Queue Depth",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 12
            },
            "targets": [
                {
                    "expr": "sentinelforge_worker_queue_depth",
                    "legendFormat": "Queue Depth"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "short",
                    "custom": {
                        "drawStyle": "line",
                        "fillOpacity": 20
                    }
                }
            }
        },
        {
            "id": 8,
            "title": "Scan Duration (P95)",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 12,
                "y": 12
            },
            "targets": [
                {
                    "expr": "histogram_quantile(0.95, sum(rate(sentinelforge_scan_duration_seconds_bucket[5m])) by (le))",
                    "legendFormat": "P95"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "s",
                    "custom": {
                        "drawStyle": "line",
                        "fillOpacity": 10
                    }
                }
            }
        }
    ],
    "templating": {
        "list": [
            {
                "name": "datasource",
                "type": "datasource",
                "query": "prometheus"
            }
        ]
    }
}