{
    "annotations": {
        "list": []
    },
    "editable": true,
    "gnetId": null,
    "graphTooltip": 1,
    "schemaVersion": 39,
    "tags": [
        "sentinelforge",
        "api"
    ],
    "title": "SentinelForge â€” API Performance",
    "uid": "sf-api-perf",
    "version": 1,
    "time": {
        "from": "now-1h",
        "to": "now"
    },
    "timezone": "browser",
    "panels": [
        {
            "id": 1,
            "title": "Request Rate (req/s)",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 0
            },
            "targets": [
                {
                    "expr": "sum(rate(http_requests_total{job=\"sentinelforge-api\"}[5m])) by (method)",
                    "legendFormat": "{{method}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "reqps",
                    "custom": {
                        "drawStyle": "line",
                        "fillOpacity": 15
                    }
                }
            }
        },
        {
            "id": 2,
            "title": "Error Rate (%)",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 12,
                "y": 0
            },
            "targets": [
                {
                    "expr": "sum(rate(http_requests_total{job=\"sentinelforge-api\",status=~\"5..\"}[5m])) / sum(rate(http_requests_total{job=\"sentinelforge-api\"}[5m])) * 100",
                    "legendFormat": "5xx error %"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "percent",
                    "thresholds": {
                        "steps": [
                            {
                                "value": 0,
                                "color": "green"
                            },
                            {
                                "value": 1,
                                "color": "yellow"
                            },
                            {
                                "value": 5,
                                "color": "red"
                            }
                        ]
                    }
                }
            }
        },
        {
            "id": 3,
            "title": "P95 Response Latency",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 8
            },
            "targets": [
                {
                    "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"sentinelforge-api\"}[5m])) by (le, handler))",
                    "legendFormat": "{{handler}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "s",
                    "custom": {
                        "drawStyle": "line",
                        "fillOpacity": 10
                    }
                }
            }
        },
        {
            "id": 4,
            "title": "Active Connections",
            "type": "stat",
            "gridPos": {
                "h": 4,
                "w": 6,
                "x": 12,
                "y": 8
            },
            "targets": [
                {
                    "expr": "sum(http_connections_active{job=\"sentinelforge-api\"})",
                    "legendFormat": "Active"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "short"
                }
            }
        },
        {
            "id": 5,
            "title": "DB Pool Usage",
            "type": "gauge",
            "gridPos": {
                "h": 4,
                "w": 6,
                "x": 18,
                "y": 8
            },
            "targets": [
                {
                    "expr": "db_pool_checked_out{job=\"sentinelforge-api\"} / db_pool_size{job=\"sentinelforge-api\"} * 100",
                    "legendFormat": "Pool %"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "percent",
                    "max": 100,
                    "thresholds": {
                        "steps": [
                            {
                                "value": 0,
                                "color": "green"
                            },
                            {
                                "value": 70,
                                "color": "yellow"
                            },
                            {
                                "value": 90,
                                "color": "red"
                            }
                        ]
                    }
                }
            }
        },
        {
            "id": 6,
            "title": "Request Latency Heatmap",
            "type": "heatmap",
            "gridPos": {
                "h": 8,
                "w": 24,
                "x": 0,
                "y": 16
            },
            "targets": [
                {
                    "expr": "sum(increase(http_request_duration_seconds_bucket{job=\"sentinelforge-api\"}[1m])) by (le)",
                    "format": "heatmap",
                    "legendFormat": "{{le}}"
                }
            ]
        }
    ],
    "templating": {
        "list": [
            {
                "name": "datasource",
                "type": "datasource",
                "query": "prometheus"
            }
        ]
    }
}